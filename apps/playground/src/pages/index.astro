---
import Layout from '../layouts/Layout.astro';
import Header from '@library/ui/astro/Header.astro';
import { ThemeToggle } from '@library/ui';
---

<Layout title="Component Playground">
	<Header title="Component Playground" subtitle="Testing Library UI Components" />
	<main>
		<div class="container">
			<h2>Library Component Testing</h2>
			<p>This site is built using:</p>
			<ul>
				<li>Astro for the static site generator</li>
				<li>NX for the monorepo structure</li>
				<li>Shared UI components from @library/ui</li>
				<li>TypeScript for type safety</li>
			</ul>
			<div class="theme-toggle-container">
				<ThemeToggle client:load />
			</div>
		</div>
	</main>
</Layout>

<style>
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem 1rem;
	}

	h2 {
		color: #333;
		margin-bottom: 1rem;
	}

	ul {
		margin: 1rem 0;
	}

	li {
		margin: 0.5rem 0;
	}

	.theme-toggle-container {
		margin-top: 2rem;
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	[data-theme="dark"] h2 {
		color: #fff;
	}
</style>
