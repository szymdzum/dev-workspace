{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "outDir": "./cache/dist",
    "rootDir": "./",
    "declaration": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "hooks/**/*"
  ],
  "exclude": [
    "node_modules",
    "cache",
    "hooks/__tests__/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}