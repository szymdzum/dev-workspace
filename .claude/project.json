{
  "name": "claude",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": ".claude",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": ".claude/cache/dist",
        "main": ".claude/hooks/index.ts",
        "tsConfig": ".claude/tsconfig.json"
      },
      "dependsOn": ["claude-hooks:build"]
    },
    "build-cli": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/.claude/cache/dist/cli"],
      "options": {
        "command": "cd .claude && npx vite build",
        "cwd": "{workspaceRoot}"
      },
      "dependsOn": ["claude-hooks:build"]
    },
    "make-executable": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-cli"],
      "options": {
        "command": "chmod +x .claude/cache/dist/cli/*.js"
      }
    },
    "execute": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "claude:build",
        "watch": false
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [".claude/**/*.{ts,js}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/.claude"],
      "options": {
        "jestConfig": ".claude/jest.config.ts"
      }
    }
  }
}