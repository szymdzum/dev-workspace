{
  "$id": "file://.claude/schemas/debug-config.schema.json",
  "title": "Claude Code Debug Configuration Schema",
  "description": "Schema for Claude Code debugging and environment configuration",
  "type": "object",
  
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema file"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the configuration"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of this debug configuration"
    },
    "env": {
      "type": "object",
      "properties": {
        "system": {
          "type": "object",
          "patternProperties": {
            "^[A-Z][A-Z0-9_]*$": {
              "type": "string"
            }
          },
          "description": "System-level environment variables"
        },
        "debug": {
          "type": "object",
          "patternProperties": {
            "^[A-Z][A-Z0-9_]*$": {
              "type": "string"
            }
          },
          "description": "Debug-related environment variables"
        },
        "validation": {
          "type": "object",
          "patternProperties": {
            "^[A-Z][A-Z0-9_]*$": {
              "type": "string"
            }
          },
          "description": "Validation feature toggles"
        },
        "thresholds": {
          "type": "object",
          "patternProperties": {
            "^[A-Z][A-Z0-9_]*$": {
              "type": "string"
            }
          },
          "description": "Validation thresholds and limits"
        }
      }
    },
    "debugModes": {
      "type": "object",
      "patternProperties": {
        "^[a-z][a-z0-9-]*$": {
          "$ref": "#/$defs/debugMode"
        }
      },
      "description": "Named debug mode configurations"
    },
    "activeMode": {
      "type": "string",
      "description": "Currently active debug mode"
    },
    "shortcuts": {
      "type": "object",
      "patternProperties": {
        "^[a-z][a-z0-9-]*$": {
          "type": "string"
        }
      },
      "description": "Shell command shortcuts for common operations"
    },
    "diagnostics": {
      "type": "object",
      "properties": {
        "commands": {
          "type": "object",
          "patternProperties": {
            "^[a-z][a-z0-9-]*$": {
              "type": "string"
            }
          },
          "description": "Diagnostic commands"
        },
        "healthCheck": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Health check commands and descriptions"
        }
      }
    }
  },
  
  "required": ["version", "debugModes", "activeMode"],
  
  "$defs": {
    "debugMode": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "description": "Human-readable description of this debug mode"
        },
        "env": {
          "type": "object",
          "patternProperties": {
            "^[A-Z][A-Z0-9_]*$": {
              "type": "string"
            }
          },
          "description": "Environment variables for this debug mode"
        }
      },
      "required": ["description", "env"]
    }
  }
}