{
  "model": "opusplan",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/szymondzumak/.claude/hooks/validate-code.sh",
            "timeout": 5,
            "continueOnFailure": true,
            "env": {
              "ENABLE_SECRET_CHECK": "1",
              "ENABLE_COMPLEXITY_CHECK": "0",
              "ENABLE_TODO_TRACKING": "1"
            }
          }
        ]
      }
    ]
  }
}
